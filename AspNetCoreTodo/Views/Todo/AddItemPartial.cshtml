@model TodoItem

<form asp-action="AddItem" method="POST">
    <label asp-for="Title">Add a new item:</label>
    <input asp-for="Title">
    @Html.TextBoxFor(model => model.DueAt, new { @type="date", @class = "form-control datepicker",  @Value = Model.DueAt.ToString() } )
    <button type="submit">Add</button>
</form>